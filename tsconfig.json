{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es2017"],

    // "jsx": "preserve",                     /* Specify JSX code generation: 'preserve', 'react-native', or 'react'. */
    "noEmit": true,
    "strict": true,
     "noUnusedLocals": true,
     "noUnusedParameters": true,
     "noImplicitReturns": true,
     "noFallthroughCasesInSwitch": true,
     "moduleResolution": "node",

    "esModuleInterop": true
  },
  "include": [
    "@types/jest",
    "core/src/",
    "core/types/",
    "core/__tests__/",
    "storages/**/src/",
    "storages/**/types/",
    "storages/**/__tests__/"
  ]
}
